    <SourceFiles Include="$(RoslynBinariesBase)\InteractiveHost64\Release\net472\win10-x64\InteractiveHost64.exe.config" />
  </ItemGroup>

  <Target Name="Build">
    <Copy SourceFiles="@(SourceFiles)" DestinationFolder="$(MSBuildThisFileDirectory)artifacts\nuget" SkipUnchangedFiles="true" />
  </Target>

</Project>