    <SourceFiles Include="@(AssemblyNameNet20->'$(RoslynBinariesBase)\%(Identity)\$(Configuration)\netstandard2.0\%(Identity).dll')" />
    <SourceFiles Include="@(AssemblyNameNet20->'$(RoslynBinariesBase)\%(Identity)\$(Configuration)\netstandard2.0\%(Identity).xml')" />
    <SourceFiles Include="@(AssemblyName->'$(RoslynBinariesBase)\%(Identity)\$(Configuration)\net472\%(Identity).dll')" />
    <SourceFiles Include="@(AssemblyName->'$(RoslynBinariesBase)\%(Identity)\$(Configuration)\net472\%(Identity).xml')" />
